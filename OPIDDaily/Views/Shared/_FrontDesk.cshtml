<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OPID Daily</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/DataTables/css")

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/mvc5datatables")
        
    @RenderSection("scripts", required: false)

    <style>
        /* https://stackoverflow.com/questions/24127521/change-bootstrap-navbar-background-color-and-font-color */
        .navbar-custom {
            background-color: WhiteSmoke;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: black;
        }

        .navbar-inverse .navbar-nav > li > a:hover {
                color: blue;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-custom">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Home", "FrontDesk")</li>
                    <li>@Html.ActionLink("Clients", "ManageClients", "FrontDesk")</li>
                    <li>@Html.ActionLink("Demographics", "GetDemographicInfo", "FrontDesk")</li>
                    <li>@Html.ActionLink("Service Ticket", "ServiceTicket", "FrontDesk")</li>
                    <li>@Html.ActionLink("Dashboard", "ManageDashboard", "FrontDesk")</li>
                    @*
        <li>@Html.ActionLink("Recent Checks", "RecentChecks", "FrontDesk")</li>
        <li>@Html.ActionLink("Ancient Checks", "AncientChecks", "FrontDesk")</li>
        <li>@Html.ActionLink("Overflow Voucher", "OverflowVoucher", "FrontDesk")</li>
        <li>@Html.ActionLink("Special Referral", "SpecialReferral", "FrontDesk")</li>
        <li>@Html.ActionLink("Review", "Review", "FrontDesk")</li>
                    *@
                </ul>
                @Html.Partial("_LoginPartial")
                @Html.Partial("_EnvironmentPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @Html.Partial("_Footer")
    </div>
</body>
</html>
